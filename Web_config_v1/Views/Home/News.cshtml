@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Web_config_v1.Models.Entity.Tintuc>

<title>Dịch Vụ</title>
@{Html.RenderAction("Setting_Config_catelog", "Home"); }
<div id="content_box">
    <h1 class="postsby">
        &nbsp; <span>TIN TỨC</span>
    </h1>
    <section id="latest-posts" class="clearfix">
      @if(Model.Count>0)
      {

          foreach(var item in Model)
          {
              <article class="latestPost post-box vertical  ">
                <div class="post-img">
                    <a href="/dich-vu/@item.Tag" title="@item.Name" rel="nofollow">
                       @if(item.Hinhanh != "")
                       {
                            <img src="@item.Hinhanh"  class="img-responsive" alt="@item.Name">
                       }
                       else
                       {
                            <img src="/Images/no-image.jpg"  class="img-responsive" alt="@item.Name">
                       }
                    </a>
                </div>
                <div class="post-data">
                    <div class="post-data-container">
                        <header>
                            <h2 class="title post-title"><a href="/dich-vu/@item.Tag" title="@item.Name">@item.Name</a></h2>
                            <div class="post-info">
                                <span class="thetime updated">@string.Format("{0:dd/MM/yyyy}",item.Ngaydang)</span>
                                
                            </div>
                        </header>
                        <div class="post-excerpt">
                            @Html.Raw(item.Tomtat)
                        </div>
                        <div class="readMore">
                            <a href="/dich-vu/@item.Tag" title="@item.Name" rel="nofollow">
                                Xem thêm...
                            </a>
                        </div>
                    </div>
                </div>
            </article>
          }
<div class="right">
    @Html.PagedListPager(Model, Page => Url.Action("News", "Home", new { Page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = false })


</div>       
      }
      else
      {
          { Html.RenderAction("Setting_Config", "Home"); }
          <div class="row">
              <b style="padding-left:20px"> @*Trang chưa cập nhật dữ liệu, vui lòng ghé lại sau.*@</b>
          </div>
      }
 
        <!--End Pagination-->
    </section><!--#latest-posts-->
</div>