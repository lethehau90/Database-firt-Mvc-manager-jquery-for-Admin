@model IList<Web_config_v1.Models.Entity.GroupNewsNewsDetail>
@{
    string language = Convert.ToString(Session["lang"]);
}
@if (Model.Count > 0)
{
    <title>@ViewBag.title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keyword" />

    if (language == "vi")
    {
        <div id="single_blog">
            <center>
                <img width="350" height="289" src="@Model.FirstOrDefault().Image"
                     class="attachment-full size-full wp-post-image" alt="LKKT_Anh Sang_Englightment_2021_Oil on canvas_90 x 120 cm"
                     srcset="@Model.FirstOrDefault().Image 350w,
                         @Model.FirstOrDefault().Image 300w" sizes="(max-width: 350px) 100vw, 350px">
            </center>
            <h1> @Model.FirstOrDefault().Name</h1>
            <span class="day">30/04/2022</span>
            <div class="line"></div>
            @Html.Raw(Model.FirstOrDefault().Detail)
        </div>
        <div class="postauthor">
            <h4 class="noidungtitle">Bình luận</h4>
            <div class="noidungcontent author-box">
                @{Html.RenderAction("Commen_facebook_Categorynews", "Home");}
            </div>
        </div>
    }
    else
    {
        <div id="single_blog">
            <center>
                <img width="350" height="289" src="@Model.FirstOrDefault().Image"
                     class="attachment-full size-full wp-post-image" alt="LKKT_Anh Sang_Englightment_2021_Oil on canvas_90 x 120 cm"
                     srcset="@Model.FirstOrDefault().Image 350w,
                         @Model.FirstOrDefault().Image 300w" sizes="(max-width: 350px) 100vw, 350px">
            </center>
            <h1> @Model.FirstOrDefault().NameEn</h1>
            <span class="day">30/04/2022</span>
            <div class="line"></div>
            @Html.Raw(Model.FirstOrDefault().DetailEn)
        </div>
        <div class="postauthor">
            @*<h4 class="noidungtitle">Bình luận</h4>*@
            <div class="noidungcontent author-box">
                @{Html.RenderAction("Commen_facebook_Categorynews", "Home");}
            </div>
        </div>
    }
}


