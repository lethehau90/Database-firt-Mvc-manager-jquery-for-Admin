@model IList<Web_config_v1.Models.Entity.GroupNew>
@if(Model.Count>0)
{
    <div class="su-box su-box-style-Soft" style="border-color:#156387;border-radius:1px;-moz-border-radius:1px;-webkit-border-radius:1px;">
        <div class="su-box-title" style="background-color:#156387;color:#fff;">NHÓM  DỊCH VỤ</div>
        <div class="su-box-content su-clearfix">
            <div class="row">
               <div class="col-lg-12">
                   @foreach (var item in Model)
                   {
                       <div class="col-lg-6">
                           <p>
                               <a href="/san-pham/@item.Tag">
                                   @if (item.Logogroup == null || item.Logogroup == "")
                                   {
                                       <img class=" img-responsive center"   src="/Images/no-image.jpg" file="/Images/no-image.jpg" alt="@item.Name" width="250" height="150" />
                                   }
                                   else
                                   {
                                    <img class=" img-responsive center" src="@item.Logogroup" file="@item.Logogroup" alt="@item.Name" width="" height="150" />
                                   }
                               </a>
                           </p>
                           <p style="text-align: center;"><a href="/san-pham/@item.Tag" class="su-button su-button-style-stroked" style="color:#fff;background-color:#2980b9;border-color:#216694;border-radius:5px;-moz-border-radius:5px;-webkit-border-radius:5px" target="_blank"><span style="color:#fff;padding:6px 16px;font-size:13px;line-height:20px;border-color:#69a6ce;border-radius:5px;-moz-border-radius:5px;-webkit-border-radius:5px;text-shadow:0px 0px 0px #000000;-moz-text-shadow:0px 0px 0px #000000;-webkit-text-shadow:0px 0px 0px #000000"><i class="fa fa-star-o" style="font-size:13px;color:#fff"></i> XEM THÊM</span></a>
                       </div>
                   }
               </div>
            </div>
        </div>
    </div>
}