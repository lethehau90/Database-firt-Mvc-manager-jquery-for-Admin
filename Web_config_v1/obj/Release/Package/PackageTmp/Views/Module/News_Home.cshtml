@model IList<Web_config_v1.Models.Entity.information>
@if(Model.Count>0)
{
    <div class="content">
        <div class="row">
            <h2 class="title_home">@Model[0].Name</h2>
            @if (Model[0].Image != "" || Model[0].Image != null)
            {
                <div class="img-responsive center">
                    <img class="center" src="@Model[0].Image" />
                </div>
            }
            <div class="container-fluid">
                @Html.Raw(Model[0].Detail)
            </div>
        </div>
    </div>
}
<!--css cho content-->
<style>
    .title_home {
        font-size: 14px;
    }
    .content .row {
        padding:0px 20px;
    }
</style>