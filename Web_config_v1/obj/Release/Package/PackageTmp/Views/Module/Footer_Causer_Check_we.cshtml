@model IList<Web_config_v1.Models.Entity.Html>
<div class="f-widget f-widget-2">
    <style type="text/css">
        #text-7 .beautifulck_title {
        }

        #text-7 .beautifulck {
        }
    </style>
    <div id="text-7" class="widget widget_text">
        <div class="beautifulck ">
            @if (Model.Count > 0)
            {
                <div class="beautifulck_title">
                    <div class="beautifulck_titletext">
                        <h3 class="widget-title">@Model[0].Ten</h3>
                    </div>
                </div>
                <div class="textwidget">
                    @Html.Raw(Model[0].Html_content)
                </div>
            }
            else
            {

                <p>Chưa cập nhật thông tin</p>
            }
 
        </div>
    </div>
</div>