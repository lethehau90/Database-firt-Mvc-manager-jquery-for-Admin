@model IList<Web_config_v1.Models.Entity.Advertise>
<div class="header-warring">Chú ý: mỗi mục danh mục kích hoạt chỉ được 1 mục được hiển thị</div>

<div class="panel-body">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
           <tr>
                <th></th>
                <th>Tên danh mục</th>
                <th>Images</th>
                <th>Danh mục</th>
                @*<th>Vị trí Ảnh</th>*@
                <th>Kích hoạt</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string src = item.Image == "" || item.Image == null ? "/images/no-image.jpg" : item.Image; <!--load anh-->
                <tr class="odd gradeX">
                    <td  style="text-align:center; width: 5%"><input type="checkbox" name="checkRow" value="bar1" class="dell" index="@item.Id"></td>
                    <td>@item.Name</td>
                    <td><img src=@src class="imglogo ShowImgZoom img-responsive" /></td>
                    <td>
                        @switch (item.PageId)
                        {
                            case  2:
                                @:Ảnh poster
                                break;
                                case  3:
                                @:Background header
                                break;
                                case  4:
                                @:Background footer
                                break;
                                case  5:
                                @:Image Contact
                                break;
                            default:
                                @:Logo header
                                break;
                        }
                    </td>
                    @*<td>
                        @switch (item.Position)
                        {
                            case 2:
                                @:Trang chủ
                                break;
                            case 3:
                            @:Liên hệ
                                break;
                            case 4:
                            @:Trang sản phẩm
                                break;
                            case 5:
                            @:Trang tin tức
                                break;
                            default:
                            @:Toàn bộ trang web
                                break;
                        }
                    </td>*@
                    <td>
                        <span class="label label-primary">
                            <a  class="label label-primary btn-active" id="btn-active"
                               data-id="@item.Id">
                                @Html.Raw(item.Active == true ? "<strong>Có</strong>" : "<strong>Không</strong>")
                            </a>
                        </span>
                    </td>
                    <td class="function">
                        <a class="btn btn-info btn-xs Edit"  id="Edit" data-id="@item.Id"><i class="fa fa-pencil"></i> Edit </a>
                        <a class="btn btn-danger btn-xs Delete" data-id="@item.Id"  id="Delete"><i class="fa fa-trash-o"></i> Delete </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <!-- /.table-responsive -->

</div>

@{ Html.RenderPartial("_Edit", Model); }

<!--tham khảo https://datatables.net/ -->



